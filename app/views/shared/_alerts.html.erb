<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Devcamp Portfolio", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Devcamp Portfolio", sticky: false) %>
<% else flash[:error] %>
  <%= js add_gritter(flash[:notice], title: "Devcamp Portfolio", sticky: false) %>
<% end %>
