<div class="blogs-container">

  <% if logged_in?(:site_admin) %>
    <%= render @blogs %>
  <% else %>
    <%= render @published_blogs %>
  <% end %>


  <% if logged_in?(:site_admin) %>
    <div class="blog-card__add-new">
      <%= link_to 'New Blog', new_blog_path, class: 'blog-card__button' %>
    </div>
  <% end %>

  <%= paginate @blogs %>

</div>
