<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form__group">
    <%= f.label :title, class: 'form__label' %>
    <%= f.text_field :title, class: 'form__input', placeholder: "Enter your title here" %>
  </div>

  <div class="form__group">
    <%= f.label :body, class: 'form__label' %>
    <%= f.text_area :body, class: 'form__input', rows: 15, placeholder: "Enter your posts content here." %>
  </div>


  <%= f.collection_select(:topic_id, @topics, :id, :title, prompt: true) %>

  <div class="form__group">
    <%= f.submit "Submit", class: 'form__submit-button button' %>
  </div>
<% end %>
