<p id="notice"><%= notice %></p>

  <div class="blog">

    <div class="blog__header">
      <h1 class="blog__title">

        <%= link_to @blog.title, @blog %></h1>
        <p class="blog__date">Published <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago.</p>

    </div>

    <p class="blog__body"><%= @blog.body%></p>

    <% if logged_in?(:site_admin) %>
      <div class="blog__admin-links">

        <p>Status: <%= link_to @blog.status,
                       toggle_status_blog_path(@blog),
                       class: "blog__link" %></p>

        <%= link_to 'Edit post', edit_blog_path(@blog),
            class: "blog__link" %>

        <%= link_to 'Delete post', @blog,
            method: :delete, data: { confirm: 'Are you sure?' },
            class: "blog__link" %>

        <%= link_to 'View all posts', blogs_path, class: "blog__link" %>

      </div>
    <% end %>


  </div>
