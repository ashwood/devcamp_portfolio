<p id="notice"><%= notice %></p>

  <div class="blog">

    <div class="blog__header">
      <h1 class="blog__title"><%= link_to @blog.title, @blog %></h1>

      <p class="blog__date">Published
        <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago.
      </p>

      <% if logged_in?(:site_admin) %>
        <div class="blog__admin-links">
          <%= link_to @blog.status.capitalize, toggle_status_blog_path(@blog),
              class: "blog__link" %> //

          <%= link_to 'Edit post', edit_blog_path(@blog),
              class: "blog__link" %> //

          <%= link_to 'Delete post', @blog,
              method: :delete, data: { confirm: 'Are you sure?' },
              class: "blog__link" %>
        </div>
      <% end %>
    </div>

    <p class="blog__body">
      <%= @blog.body%>
    </p>

    <% unless current_user.is_a? GuestUser %>
      <div class="form">
        <div class="form__section">
          <h2 class="form__group-title">Post a comment</h2>
          <%= form_for @comment, url: '#' do |f| %>
            <div class="form__group">
              <%= f.text_area :content, class: 'form__input' %>
            </div>

            <div class="form__group">
              <%= f.submit "Post comment", class: 'form__submit-button button' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="blog__comments-container">
      <h2 class="blog__comments-header">Comments</h2>
      <%= render @blog.comments %>
    </div>
  </div>
