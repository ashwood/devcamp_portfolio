<div class="portfolio-card" data-id="<%= portfolio_item.id %>">

  <%= image_tag ("#{portfolio_item.thumb_image unless
                    portfolio_item.thumb_image.nil?}"),
                    class: "portfolio-card__thumb-image" %>

  <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item),
                                    class: 'portfolio-card__title' %>
  <p class="portfolio-card__date"><%= portfolio_item.created_at.strftime("%Y") %></p>

    <% if logged_in?(:site_admin) %>

    <%= link_to "Edit Portfolio", edit_portfolio_path(portfolio_item),
        class: 'portfolio-card__link' %> //

    <%= link_to "Delete Portfolio", portfolio_path(portfolio_item),
        method: :delete, data: { confirm: "Are you sure?" },
        class: "portfolio-card__link" %>

    <% end %>

</div>
