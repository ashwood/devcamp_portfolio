<div class="portfolios-container <%= "sortable" if logged_in?(:site_admin)%>">

  <%= render partial: 'portfolio_item', collection: @portfolio_items %>

  <% if logged_in?(:site_admin) %>
    <div class="portfolio-card__add-new">
      <%= link_to "Create portfolio", new_portfolio_path,
          class: 'portfolio-card__button' %>
    </div>
  <% end %>

</div>
